    <entry align="right"><m:math><m:mrow><m:mn>3</m:mn><m:mo>⋅</m:mo><m:mn>2</m:mn><m:mo>+</m:mo><m:mn>2</m:mn><m:mo>⋅</m:mo><m:mn>0</m:mn><m:mo>≟</m:mo><m:mn>6</m:mn></m:mrow><m:mspace width="1.3em"/></m:math></entry>
    <entry align="right"><m:math><m:mrow><m:mn>3</m:mn><m:mo>⋅</m:mo><m:mn>1</m:mn><m:mo>+</m:mo><m:mn>2</m:mn><m:mo>⋅</m:mo><m:mfrac><m:mn>3</m:mn><m:mn>2</m:mn></m:mfrac><m:mo>≟</m:mo><m:mn>6</m:mn></m:mrow><m:mspace width="1.3em"/></m:math></entry>
