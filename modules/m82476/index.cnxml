   <entry><emphasis>Step 6. Check. </emphasis><newline/><newline/><media id="eip-id1167267794685" alt="."><image mime-type="image/png" src="../../media/CNX_ElemAlg_Figure_03_04_028a_img_new.jpg"/></media><newline/><m:math><m:mtable><m:mtr><m:mtd columnalign="right"><m:mi>P</m:mi></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mn>2</m:mn><m:mi>L</m:mi><m:mo>+</m:mo><m:mn>2</m:mn><m:mi>W</m:mi></m:mtd></m:mtr><m:mtr><m:mtd columnalign="right"><m:mn>32</m:mn></m:mtd><m:mtd columnalign="left"><m:mo>≟</m:mo></m:mtd><m:mtd columnalign="left"><m:mn>2</m:mn><m:mo>⋅</m:mo><m:mn>12</m:mn><m:mo>+</m:mo><m:mn>2</m:mn><m:mo>⋅</m:mo><m:mn>4</m:mn></m:mtd></m:mtr><m:mtr><m:mtd columnalign="right"><m:mn>32</m:mn></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mn>32</m:mn><m:mo>✓</m:mo></m:mtd></m:mtr></m:mtable></m:math></entry><entry/>
